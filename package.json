{
  "name": "@hattmo/envshell",
  "description": "load env vars in a per project basis into a special shell environment",
  "scripts": {
    "build": "tsc --watch --project .",
    "prepare": "tsc --project .",
    "start": "nodemon ./dst/bin/main.js",
    "test": "jest --coverage",
    "lint": "prettier --write ./src/** && eslint ./src/**",
    "compile": "pkg ."
  },
  "author": "hattmo",
  "version": "0.3.6",
  "license": "GPL-3.0-or-later",
  "files": [
    "/dst/"
  ],
  "bin": "./dst/bin/main.js",
  "main": "./dst/lib/index.js",
  "pkg": {
    "targets": [
      "node14-win-x64",
      "node14-linux-x64"
    ],
    "outputPath": "artifacts"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.4",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "eslint": "^7.29.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.24.0",
    "jest": "^27.0.5",
    "nodemon": "^2.0.7",
    "pkg": "^5.3.0",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "commander": "^8.0.0",
    "node-pty": "^0.10.1"
  }
}
